@model IEnumerable<uchet.Models.Inventory>

@{
    ViewData["Title"] = "Инвентаризации";
}

<h2>Инвентаризации</h2>

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Создать новую инвентаризацию
        </a>
    }
    
    @if (User.IsInRole("Admin"))
    {
        <!-- Кнопка для удаления завершенных инвентаризаций -->
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteCompletedModal">
            <i class="fas fa-trash"></i> Удалить завершенные
        </button>
    }
</p>

@if (User.IsInRole("Admin"))
{
    <!-- Модальное окно подтверждения удаления завершенных инвентаризаций -->
    <div class="modal fade" id="deleteCompletedModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Удаление завершенных инвентаризаций</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Вы уверены, что хотите удалить все завершенные инвентаризации?</p>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Внимание!</strong> Это действие нельзя отменить. Будут удалены все записи о завершенных инвентаризациях.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <form asp-action="DeleteCompleted" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Удалить завершенные</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<!-- Статистика -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h6 class="card-title">Всего инвентаризаций</h6>
                <h4 class="card-text">@Model.Count()</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h6 class="card-title">Завершено</h6>
                <h4 class="card-text">@Model.Count(i => i.IsCompleted)</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h6 class="card-title">В процессе</h6>
                <h4 class="card-text">@Model.Count(i => !i.IsCompleted)</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h6 class="card-title">Общий прогресс</h6>
                <h4 class="card-text">
                    @{
                        var totalItems = Model.Sum(i => i.TotalItems);
                        var checkedItems = Model.Sum(i => i.CheckedItems);
                        var progress = totalItems > 0 ? (checkedItems * 100 / totalItems) : 0;
                    }
                    @progress%
                </h4>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Название</th>
            <th>Локация</th>
            <th>Дата начала</th>
            <th>Дата завершения</th>
            <th>Статус</th>
            <th>Прогресс</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@item.Name</strong>
                    @if (item.IsCompleted && item.EndDate.HasValue && (DateTime.Now - item.EndDate.Value).TotalDays < 7)
                    {
                        <span class="badge bg-info ms-1">Новая</span>
                    }
                </td>
                <td>@item.Location?.Name</td>
                <td>@item.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    @if (item.IsCompleted && item.EndDate.HasValue)
                    {
                        @item.EndDate.Value.ToString("dd.MM.yyyy HH:mm")
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <span class="badge bg-success">
                            <i class="fas fa-check-circle"></i> Завершена
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning">
                            <i class="fas fa-sync-alt"></i> В процессе
                        </span>
                    }
                </td>
                <td>
                    @if (item.TotalItems > 0)
                    {
                        var progressPercent = (item.CheckedItems * 100 / item.TotalItems);
                        <div class="d-flex align-items-center">
                            <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                <div class="progress-bar @(item.IsCompleted ? "bg-success" : "bg-warning")" 
                                     role="progressbar" 
                                     style="width: @progressPercent%" 
                                     aria-valuenow="@item.CheckedItems" 
                                     aria-valuemin="0" 
                                     aria-valuemax="@item.TotalItems">
                                </div>
                            </div>
                            <small class="text-nowrap">@item.CheckedItems/@item.TotalItems</small>
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">Нет имущества</span>
                    }
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Детали">
                            <i class="fas fa-eye"></i>
                        </a>
                        
                        @if (!item.IsCompleted)
                        {
                            <!-- Сканирование доступно всем авторизованным пользователям -->
                            <a asp-action="Scan" asp-route-id="@item.Id" class="btn btn-success" title="Сканировать">
                                <i class="fas fa-qrcode"></i>
                            </a>
                            
                            <!-- Завершение инвентаризации доступно Admin и Manager -->
                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                <form asp-action="Complete" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-warning" title="Завершить инвентаризацию" 
                                            onclick="return confirm('Завершить инвентаризацию? Непроверенное имущество будет отмечено как отсутствующее.')">
                                        <i class="fas fa-flag-checkered"></i>
                                    </button>
                                </form>
                            }
                        }
                        
                        <!-- Удаление доступно только Admin -->
                        @if (User.IsInRole("Admin") && item.IsCompleted)
                        {
                            <form asp-action="Delete" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger" title="Удалить инвентаризацию"
                                        onclick="return confirm('Вы уверены, что хотите удалить эту инвентаризацию?')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle fa-2x mb-3"></i>
        <h4>Инвентаризации не найдены</h4>
        <p>Создайте первую инвентаризацию для начала работы.</p>
        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <a asp-action="Create" class="btn btn-primary">Создать инвентаризацию</a>
        }
    </div>
}