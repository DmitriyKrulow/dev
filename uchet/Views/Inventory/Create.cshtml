@model uchet.Models.Inventory

@{
    ViewData["Title"] = "Создание инвентаризации";
}

<h2>Создание инвентаризации</h2>

@if (!User.IsInRole("Admin") && !User.IsInRole("Manager"))
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Недостаточно прав!</strong> Только администраторы и менеджеры могут создавать новые инвентаризации.
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Выберите тип инвентаризации</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-primary" onclick="showForm('location')">
                            <i class="fas fa-building"></i> По локации
                        </button>
                        <button type="button" class="btn btn-success" onclick="showForm('user')">
                            <i class="fas fa-user"></i> По пользователю
                        </button>
                    </div>
                </div>
            </div>

            <!-- Форма создания по локации -->
            <div id="locationForm" style="display: none;">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title">Новая инвентаризация по локации</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="name" class="form-label">Название инвентаризации *</label>
                                <input type="text" class="form-control" id="name" name="name" required 
                                       placeholder="Введите название инвентаризации">
                                <div class="form-text">Например: "Инвентаризация офиса №1 - Январь 2024"</div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="locationId" class="form-label">Локация *</label>
                                <select class="form-select" id="locationId" name="locationId" required>
                                    <option value="">Выберите локацию</option>
                                    @foreach (var location in ViewBag.Locations)
                                    {
                                        <option value="@location.Value">@location.Text</option>
                                    }
                                </select>
                                <div class="form-text">Выберите локацию для проведения инвентаризации</div>
                            </div>
                            
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Важно!</strong> При создании новой инвентаризации все имущество в выбранной локации будет помечено как "не проверено".
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Создать инвентаризацию
                            </button>
                            <button type="button" class="btn btn-secondary" onclick="hideForm()">Отмена</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Форма создания по пользователю -->
            <div id="userForm" style="display: none;">
                <form asp-action="CreateByUser" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title">Новая инвентаризация по пользователю</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="name" class="form-label">Название инвентаризации *</label>
                                <input type="text" class="form-control" id="name" name="name" required
                                       placeholder="Введите название инвентаризации">
                                <div class="form-text">Например: "Инвентаризация имущества Иванова И.И. - Январь 2024"</div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="userId" class="form-label">Пользователь *</label>
                                <select class="form-select" id="userId" name="userId" required>
                                    <option value="">Выберите пользователя</option>
                                    @foreach (var user in ViewBag.Users)
                                    {
                                        <option value="@user.Value">@user.Text</option>
                                    }
                                </select>
                                <div class="form-text">Выберите пользователя для проведения инвентаризации его имущества</div>
                            </div>
                            
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Важно!</strong> Будет создана инвентаризация только для имущества, переданного выбранному пользователю.
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Создать инвентаризацию
                            </button>
                            <button type="button" class="btn btn-secondary" onclick="hideForm()">Отмена</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Информация</h5>
                </div>
                <div class="card-body">
                    <h6><i class="fas fa-lightbulb text-warning"></i> Типы инвентаризации:</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-building text-primary"></i> <strong>По локации:</strong> Инвентаризация всего имущества в выбранной локации</li>
                        <li><i class="fas fa-user text-success"></i> <strong>По пользователю:</strong> Инвентаризация имущества, переданного конкретному пользователю</li>
                    </ul>
                    
                    <div class="mt-3 p-3 bg-light rounded">
                        <h6><i class="fas fa-qrcode"></i> Процесс сканирования:</h6>
                        <p class="mb-1">1. Создайте инвентаризацию</p>
                        <p class="mb-1">2. Перейдите в режим сканирования</p>
                        <p class="mb-1">3. Сканируйте QR-коды имущества</p>
                        <p class="mb-0">4. Завершите инвентаризацию</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
function showForm(type) {
    if (type === 'location') {
        document.getElementById('locationForm').style.display = 'block';
        document.getElementById('userForm').style.display = 'none';
    } else if (type === 'user') {
        document.getElementById('userForm').style.display = 'block';
        document.getElementById('locationForm').style.display = 'none';
    }
}

function hideForm() {
    document.getElementById('locationForm').style.display = 'none';
    document.getElementById('userForm').style.display = 'none';
}
</script>