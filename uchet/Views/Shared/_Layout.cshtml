﻿<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Учет имущества</title>

    <!-- Подключение Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    
    <!-- Собственные стили -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navigation.css" asp-append-version="true" />
    
    <!-- Секция для дополнительных стилей -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-database-gear me-2"></i>Учет имущества
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" 
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Основное меню -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Главная
                            </a>
                        </li>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Основные модули -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-menu-button-wide me-1"></i>Модули
                                </a>
                                <ul class="dropdown-menu">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Property" asp-action="Index">
                                                <i class="bi bi-database me-2"></i>Учет имущества
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <a class="dropdown-item" asp-controller="Scan" asp-action="Index">
                                            <i class="bi bi-qr-code-scan me-2"></i>Сканирование
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("User"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Inventory" asp-action="Index">
                                                <i class="bi bi-clipboard-check me-2"></i>Инвентаризация
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("User"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Maintenance" asp-action="Index">
                                                <i class="bi bi-tools me-2"></i>Обслуживание
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="TransferHistory" asp-action="Index">
                                                <i class="bi bi-clock-history me-2"></i>История перемещений
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>

                            <!-- Административное меню -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear me-1"></i>Администрирование
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                                <i class="bi bi-people me-2"></i>Пользователи
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="RoleManagement">
                                                <i class="bi bi-shield-lock me-2"></i>Роли
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Reference">
                                                <i class="bi bi-book me-2"></i>Справочники
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Правая часть навигации -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Информация о пользователе -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>
                                    <span class="d-none d-md-inline">@User.Identity.Name</span>
                                    @{
                                        var badgeClass = User.IsInRole("Admin") ? "bg-danger" : 
                                                        User.IsInRole("Manager") ? "bg-warning" : 
                                                        User.IsInRole("User") ? "bg-info" : "bg-secondary";
                                        var roleName = User.IsInRole("Admin") ? "Admin" : 
                                                      User.IsInRole("Manager") ? "Manager" : 
                                                      User.IsInRole("User") ? "User" : "Guest";
                                    }
                                    <span class="badge @badgeClass ms-1">@roleName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                            <i class="bi bi-key me-2"></i>Сменить пароль
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Privacy">
                                            <i class="bi bi-info-circle me-2"></i>О программе
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>Выйти
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Войти
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Унифицированный компонент для временных сообщений -->
            @await Html.PartialAsync("_AlertMessages")
            
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    &copy; 2025 - Учет имущества
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none">
                        <i class="bi bi-shield-check me-1"></i>Политика конфиденциальности
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Подключение JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Секция для дополнительных скриптов -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>