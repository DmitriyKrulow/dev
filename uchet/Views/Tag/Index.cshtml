@model IEnumerable<uchet.Models.Tag>

@{
    ViewData["Title"] = "Управление бирками";
}

<h2>Управление бирками</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить бирку</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Ширина</th>
            <th>Высота</th>
            <th>Описание</th>
            <th>Активна</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Width</td>
                <td>@item.Height</td>
                <td>@item.Description</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Да</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Нет</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены, что хотите удалить эту бирку?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>