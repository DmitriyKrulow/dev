@model uchet.Models.Property

@{
    ViewData["Title"] = "Детали имущества";
}

<div class="container-fluid">
    <h2>Детали имущества</h2>

    <!-- Сообщение об успешном сохранении -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Основная информация</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Название:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Описание:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</dd>

                        <dt class="col-sm-3">Инвентарный номер:</dt>
                        <dd class="col-sm-9"><strong>@Model.InventoryNumber</strong></dd>

                        <dt class="col-sm-3">Тип имущества:</dt>
                        <dd class="col-sm-9">@Model.PropertyType?.Name</dd>

                        <dt class="col-sm-3">Размещение:</dt>
                        <dd class="col-sm-9">@Model.Location?.Name</dd>

                        <dt class="col-sm-3">Назначенный пользователь:</dt>
                        <dd class="col-sm-9">@(Model.AssignedUser?.Name ?? "Не назначен")</dd>

                        <dt class="col-sm-3">Дата баланса:</dt>
                        <dd class="col-sm-9">@(Model.BalanceDate?.ToString("dd.MM.yyyy") ?? "-")</dd>

                        <dt class="col-sm-3">Срок использования:</dt>
                        <dd class="col-sm-9">@(Model.UsagePeriod?.ToString() ?? "-") мес.</dd>

                        <dt class="col-sm-3">Стоимость:</dt>
                        <dd class="col-sm-9"><strong>@(Model.Cost?.ToString("N0") ?? "-") ₽</strong></dd>

                        <dt class="col-sm-3">Последнее обслуживание:</dt>
                        <dd class="col-sm-9">@(Model.LastMaintenanceDate?.ToString("dd.MM.yyyy") ?? "-")</dd>

                        <dt class="col-sm-3">Срок годности:</dt>
                        <dd class="col-sm-9">
                            @if (Model.ExpiryDate.HasValue)
                            {
                                if (Model.ExpiryDate.Value < DateTime.Now)
                                {
                                    <span class="text-danger">
                                        @Model.ExpiryDate.Value.ToString("dd.MM.yyyy")
                                        <i class="fas fa-exclamation-triangle ms-1" title="Срок годности истек"></i>
                                    </span>
                                }
                                else if (Model.ExpiryDate.Value < DateTime.Now.AddMonths(1))
                                {
                                    <span class="text-warning">
                                        @Model.ExpiryDate.Value.ToString("dd.MM.yyyy")
                                        <i class="fas fa-clock ms-1" title="Срок годности скоро истекает"></i>
                                    </span>
                                }
                                else
                                {
                                    @Model.ExpiryDate.Value.ToString("dd.MM.yyyy")
                                }
                            }
                            else
                            {
                                <text>-</text>
                            }
                        </dd>

                        <dt class="col-sm-3">Статус проверки:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsCheckedInLastInventory)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i> Проверено
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-times me-1"></i> Не проверено
                                </span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- QR код -->
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="card-title mb-0">QR код</h6>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.QRCode))
                    {
                        <img src="@Url.Action("GenerateQRCodeImage", new { id = Model.Id })" 
                             alt="QR Code" 
                             class="img-fluid"
                             style="max-width: 200px;" />
                        <div class="mt-2">
                            <small class="text-muted">@Model.QRCode</small>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted">
                            <i class="fas fa-qrcode fa-3x mb-2"></i>
                            <p>QR код не сгенерирован</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Штрих-код -->
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">Штрих-код</h6>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.Barcode))
                    {
                        <img src="@Url.Action("GenerateBarcodeImage", new { id = Model.Id })" 
                             alt="Barcode" 
                             class="img-fluid"
                             style="max-width: 250px; height: 80px;" />
                        <div class="mt-2">
                            <small class="text-muted">@Model.Barcode</small>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted">
                            <i class="fas fa-barcode fa-3x mb-2"></i>
                            <p>Штрих-код не сгенерирован</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i> Редактировать
            </a>
        }
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Назад к списку
        </a>
    </div>
</div>