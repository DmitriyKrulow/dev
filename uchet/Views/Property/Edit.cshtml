@model uchet.Models.EditPropertyDto

@{
    ViewData["Title"] = "Редактировать имущество";
}

<div class="container-fluid">
    <h2>Редактировать имущество</h2>

    <!-- Сообщения об успехе/ошибках -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> Пожалуйста, исправьте ошибки в форме
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Основная информация</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label">Название *</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="InventoryNumber" class="control-label">Инвентарный номер *</label>
                                    <input asp-for="InventoryNumber" class="form-control" />
                                    <span asp-validation-for="InventoryNumber" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="PropertyTypeId" class="control-label">Тип имущества *</label>
                                    <select asp-for="PropertyTypeId" asp-items="ViewBag.PropertyTypes" class="form-control">
                                        <option value="">Выберите тип</option>
                                    </select>
                                    <span asp-validation-for="PropertyTypeId" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="LocationId" class="control-label">Размещение *</label>
                                    <select asp-for="LocationId" asp-items="ViewBag.Locations" class="form-control">
                                        <option value="">Выберите размещение</option>
                                    </select>
                                    <span asp-validation-for="LocationId" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="AssignedUserId" class="control-label">Назначить пользователю</label>
                                    <select asp-for="AssignedUserId" asp-items="ViewBag.Users" class="form-control">
                                        <option value="">Не назначено</option>
                                    </select>
                                    <span asp-validation-for="AssignedUserId" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Cost" class="control-label">Стоимость</label>
                                    <input asp-for="Cost" class="form-control" type="number" step="0.01" min="0" />
                                    <span asp-validation-for="Cost" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="BalanceDate" class="control-label">Дата баланса</label>
                                    <input asp-for="BalanceDate" class="form-control" type="date" />
                                    <span asp-validation-for="BalanceDate" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="UsagePeriod" class="control-label">Срок использования (месяцев)</label>
                                    <input asp-for="UsagePeriod" class="form-control" type="number" min="0" max="1000" />
                                    <span asp-validation-for="UsagePeriod" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="LastMaintenanceDate" class="control-label">Дата последнего обслуживания</label>
                                    <input asp-for="LastMaintenanceDate" class="form-control" type="date" />
                                    <span asp-validation-for="LastMaintenanceDate" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="ExpiryDate" class="control-label">Срок годности</label>
                                    <input asp-for="ExpiryDate" class="form-control" type="date" />
                                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Введите описание имущества..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Информация о кодах -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h6 class="card-title mb-0">Коды имущества</h6>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <div class="mb-3">
                                <i class="fas fa-qrcode fa-2x text-primary mb-2"></i>
                                <p class="small text-muted">QR код будет обновлен автоматически при сохранении</p>
                            </div>
                            <div>
                                <i class="fas fa-barcode fa-2x text-success mb-2"></i>
                                <p class="small text-muted">Штрих-код будет обновлен автоматически при сохранении</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Подсказки -->
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">Подсказки</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled small">
                            <li class="mb-2">
                                <i class="fas fa-info-circle text-info me-2"></i>
                                Поля помеченные * обязательны для заполнения
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-save text-success me-2"></i>
                                После сохранения вы будете перенаправлены на страницу просмотра
                            </li>
                            <li>
                                <i class="fas fa-undo text-warning me-2"></i>
                                Все изменения можно отредактировать позже
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-save me-2"></i> Сохранить изменения
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="fas fa-eye me-2"></i> Просмотр
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Назад к списку
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Форматирование дат при загрузке страницы
            function formatDateForInput(dateString) {
                if (!dateString) return '';
                const date = new Date(dateString);
                if (isNaN(date.getTime())) return '';
                return date.toISOString().split('T')[0];
            }

            // Применяем форматирование ко всем полям дат
            const dateFields = document.querySelectorAll('input[type="date"]');
            dateFields.forEach(field => {
                if (field.value) {
                    field.value = formatDateForInput(field.value);
                }
            });

            // Валидация в реальном времени
            const costInput = document.querySelector('input[name="Cost"]');
            if (costInput) {
                costInput.addEventListener('blur', function() {
                    if (this.value && this.value < 0) {
                        this.value = 0;
                    }
                });
            }

            const usagePeriodInput = document.querySelector('input[name="UsagePeriod"]');
            if (usagePeriodInput) {
                usagePeriodInput.addEventListener('blur', function() {
                    if (this.value && this.value < 0) {
                        this.value = 0;
                    } else if (this.value && this.value > 1000) {
                        this.value = 1000;
                    }
                });
            }

            // Подсветка обязательных полей
            const requiredFields = document.querySelectorAll('input[required], select[required]');
            requiredFields.forEach(field => {
                field.classList.add('is-required');
            });

            // Показ предупреждения при уходе со страницы с несохраненными изменениями
            let formChanged = false;
            const form = document.querySelector('form');
            const formInputs = form.querySelectorAll('input, select, textarea');
            
            formInputs.forEach(input => {
                input.addEventListener('input', function() {
                    formChanged = true;
                });
            });

            window.addEventListener('beforeunload', function(e) {
                if (formChanged) {
                    e.preventDefault();
                    e.returnValue = '';
                }
            });

            form.addEventListener('submit', function() {
                formChanged = false;
            });
        });
    </script>

    <style>
        .is-required {
            border-left: 3px solid #dc3545;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-control {
            border-radius: 0.375rem;
            transition: all 0.15s ease-in-out;
        }
        
        .form-control:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        
        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
        
        .card {
            box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.1);
            border: 1px solid #e9ecef;
        }
        
        .card-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-bottom: 1px solid #dee2e6;
            font-weight: 600;
        }
        
        .text-danger {
            font-size: 0.875rem;
            font-weight: 500;
        }
        
        label {
            font-weight: 600;
            color: #495057;
        }
        
        .alert {
            border-radius: 0.5rem;
        }
    </style>
}