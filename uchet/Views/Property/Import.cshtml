@{
    ViewData["Title"] = "Импорт имущества из Excel";
}

<h2>Импорт имущества из Excel</h2>

<div class="alert alert-info">
    <p>Для импорта имущества скачайте шаблон Excel и заполните его в соответствии с форматом.</p>
    <p><a href="@Url.Action("DownloadImportTemplate", "Property")" class="btn btn-success">Скачать шаблон Excel</a></p>
</div>

html
@if (TempData["ImportErrors"] != null)
{
    <div class="alert alert-danger">
        <h5>Ошибки импорта:</h5>
        <ul>
            @foreach (var error in TempData["ImportErrors"] as List<string> ?? new List<string>())
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<form asp-action="Import" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Выберите Excel файл:</label>
        <input type="file" name="file" class="form-control" accept=".xlsx,.xls" />
    </div>
    
    <div class="form-group">
        <input type="submit" value="Импортировать" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>