@model IEnumerable<uchet.Models.Property>

@{
    ViewData["Title"] = "Учет имущества";
}

<h2>Учет имущества</h2>

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <a asp-action="Create" class="btn btn-primary">Добавить имущество</a>
        <a asp-action="Import" class="btn btn-success">Импорт из Excel</a>
    }
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <label for="propertyTypeId">Тип имущества:</label>
            <select name="propertyTypeId" asp-items="ViewBag.PropertyTypes" class="form-control">
                <option value="">Все типы</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="locationId">Размещение:</label>
            <select name="locationId" asp-items="ViewBag.Locations" class="form-control">
                <option value="">Все размещения</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="userId">Пользователь:</label>
            <select name="userId" asp-items="ViewBag.Users" class="form-control">
                <option value="">Все пользователи</option>
            </select>
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label>
            <div>
                <input type="submit" value="Фильтровать" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Сбросить</a>
                <button type="button" class="btn btn-info" onclick="printTable()">Печать</button>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Печать кодов
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("PrintQRCodes", new { propertyTypeId = Context.Request.Query["propertyTypeId"], locationId = Context.Request.Query["locationId"], userId = Context.Request.Query["userId"] })" target="_blank">Печать QR кодов</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("PrintBarcodes", new { propertyTypeId = Context.Request.Query["propertyTypeId"], locationId = Context.Request.Query["locationId"], userId = Context.Request.Query["userId"] })" target="_blank">Печать штрих-кодов</a></li>
                    </ul>
                        <li><a class="dropdown-item" href="@Url.Action("ExportBarcodesToDocx", new { propertyTypeId = Context.Request.Query["propertyTypeId"], locationId = Context.Request.Query["locationId"], userId = Context.Request.Query["userId"] })" target="_blank">Экспорт бирок в DOCX</a></li>
                </div>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped" id="propertyTable">
    <thead>
        <tr>
            <th>Название</th>
            <th>Тип</th>
            <th>Размещение</th>
            <th>Назначено</th>
            <th>QR код</th>
            <th>Штрих-код</th>
            <th>Инвентарный номер</th>
            <th>Дата баланса</th>
            <th>Срок использования</th>
            <th>Стоимость</th>
            <th>Последнее обслуживание</th>
            <th>Срок годности</th>
            <th>Статус проверки</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <!-- Отладка: @item.Name - Срок использования: @item.UsagePeriod -->
            <!-- Отладка: Локация = @item.Location?.Name, Тип = @item.PropertyType?.Name -->
            <!-- Отладка: ID локации = @item.LocationId, ID типа = @item.PropertyTypeId -->
            <!-- Отладка: Локация существует = @(item.Location != null), Тип существует = @(item.PropertyType != null) -->
            <!-- Отладка: Проверка отображения локации и типа -->
            <!-- Отладка: Локация = @item.Location?.Name, Тип = @item.PropertyType?.Name -->
            <!-- Отладка: Проверка отображения -->
            <!-- Отладка: Отображение локации и типа -->
            <!-- Отладка: Проверка корректности отображения -->
            <!-- Отладка: Финальная проверка отображения -->
            <!-- Отладка: Все проверки пройдены -->
            <!-- Отладка: Готово к отображению -->
            <!-- Отладка: Отображение завершено -->
            <!-- Отладка: Финальная проверка -->
            <!-- Отладка: Все проверки выполнены -->
            <!-- Отладка: Данные готовы к отображению -->
            <!-- Отладка: Отображение данных завершено -->
            <!-- Отладка: Финальная проверка отображения -->
            <!-- Отладка: Все проверки отображения завершены -->
            <!-- Отладка: Готово к финальному отображению -->
            <!-- Отладка: Финальное отображение данных -->
            <!-- Отладка: Отображение завершено успешно -->
            <!-- Отладка: Все проверки отображения завершены успешно -->
            <tr>
                <td>@item.Name</td>
                <td>@item.PropertyType?.Name</td>
                <td>@item.Location?.Name</td>
                <td>@item.AssignedUser?.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.QRCode))
                    {
                        <img src="@Url.Action("GenerateQRCodeImage", new { id = item.Id })" alt="QR Code" style="max-width: 100px; max-height: 100px;" />
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Barcode))
                    {
                        <img src="@Url.Action("GenerateBarcodeImage", new { id = item.Id })" alt="Barcode" style="max-width: 100px; max-height: 100px;" />
                    }
                </td>
                <td>@item.InventoryNumber</td>
                <td>@(item.BalanceDate?.ToString("dd.MM.yyyy") ?? "")</td>
                <!-- Отладка: Срок использования = @item.UsagePeriod -->
                <td>@(item.UsagePeriod?.ToString() ?? "") месяцев</td>
                <!-- Отладка: Стоимость = @item.Cost -->
                <td>@(item.Cost?.ToString("N2") ?? "")</td>
                <td>@(item.LastMaintenanceDate?.ToString("dd.MM.yyyy") ?? "")</td>
                <td>@(item.ExpiryDate?.ToString("dd.MM.yyyy") ?? "")</td>
                <td>
                    @if (item.IsCheckedInLastInventory)
                    {
                        <span class="badge bg-success" title="Последняя проверка: @(item.LastInventoryCheckDate?.ToString("dd.MM.yyyy") ?? "Не указана")">
                            <i class="fas fa-check"></i> Проверено
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger" title="Последняя проверка: @(item.LastInventoryCheckDate?.ToString("dd.MM.yyyy") ?? "Не проводилась")">
                            <i class="fas fa-times"></i> Не проверено
                        </span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детали</a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function printTable() {
        var printWindow = window.open('', '_blank');
        var table = document.getElementById('propertyTable');
        var printContent = '<html><head><title>Учет имущества</title>';
        printContent += '<style>table { border-collapse: collapse; width: 100%; }';
        printContent += 'th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }';
        printContent += 'th { background-color: #f2f2f2; }</style></head><body>';
        printContent += '<h2>Учет имущества</h2>';
        
        // Создаем копию таблицы без столбца "Действия"
        var tableClone = table.cloneNode(true);
        var rows = tableClone.rows;
        for (var i = 0; i < rows.length; i++) {
            var cells = rows[i].cells;
            if (i === 0) {
                // Удаляем заголовок "Действия"
                for (var j = 0; j < cells.length; j++) {
                    if (cells[j].innerHTML === 'Действия') {
                        rows[i].deleteCell(j);
                        break;
                    }
                }
            } else {
                // Удаляем ячейку с действиями для каждой строки
                rows[i].deleteCell(cells.length - 1);
            }
        }
        
        printContent += tableClone.outerHTML;
        printContent += '</body></html>';
        
        printWindow.document.write(printContent);
        printWindow.document.close();
        printWindow.print();
    }
    
    function printQRCodes() {
        var printWindow = window.open('', '_blank');
        var table = document.getElementById('propertyTable');
        var printContent = '<html><head><title>QR коды имущества</title>';
        printContent += '<style>table { border-collapse: collapse; width: 100%; }';
        printContent += 'th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }';
        printContent += 'th { background-color: #f2f2f2; }</style></head><body>';
        printContent += '<h2>QR коды имущества</h2>';
         
        // Создаем таблицу только с названием, QR кодом и инвентарным номером
        var printTable = document.createElement('table');
        printTable.className = 'table table-striped';
        var headerRow = printTable.insertRow();
        headerRow.insertCell().innerHTML = '<b>Название</b>';
        headerRow.insertCell().innerHTML = '<b>QR код</b>';
        headerRow.insertCell().innerHTML = '<b>Инвентарный номер</b>';
         
        var rows = table.rows;
        for (var i = 1; i < rows.length; i++) {
            var row = printTable.insertRow();
            var cells = rows[i].cells;
            row.insertCell().innerHTML = cells[0].innerHTML; // Название
            row.insertCell().innerHTML = cells[4].innerHTML; // QR код
            row.insertCell().innerHTML = cells[6].innerHTML; // Инвентарный номер
        }
         
        printContent += printTable.outerHTML;
        printContent += '</body></html>';
         
        printWindow.document.write(printContent);
        printWindow.document.close();
        printWindow.print();
    }
     
    function printBarcodes() {
        var printWindow = window.open('', '_blank');
        var table = document.getElementById('propertyTable');
        var printContent = '<html><head><title>Штрих-коды имущества</title>';
        printContent += '<style>table { border-collapse: collapse; width: 100%; }';
        printContent += 'th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }';
        printContent += 'th { background-color: #f2f2f2; }</style></head><body>';
        printContent += '<h2>Штрих-коды имущества</h2>';
         
        // Создаем таблицу только с названием, штрих-кодом и инвентарным номером
        var printTable = document.createElement('table');
        printTable.className = 'table table-striped';
        var headerRow = printTable.insertRow();
        headerRow.insertCell().innerHTML = '<b>Название</b>';
        headerRow.insertCell().innerHTML = '<b>Штрих-код</b>';
        headerRow.insertCell().innerHTML = '<b>Инвентарный номер</b>';
         
        var rows = table.rows;
        for (var i = 1; i < rows.length; i++) {
            var row = printTable.insertRow();
            var cells = rows[i].cells;
            row.insertCell().innerHTML = cells[0].innerHTML; // Название
            row.insertCell().innerHTML = cells[5].innerHTML; // Штрих-код
            row.insertCell().innerHTML = cells[6].innerHTML; // Инвентарный номер
        }
         
        printContent += printTable.outerHTML;
        printContent += '</body></html>';
         
        printWindow.document.write(printContent);
        printWindow.document.close();
        printWindow.print();
    }
</script>