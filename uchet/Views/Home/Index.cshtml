@model uchet.Models.DashboardViewModel

@{
    ViewData["Title"] = "Общая информация";
}

<div class="container">
    <h2>Общая информация</h2>
    
    <!-- Карточки с основными метриками -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Общее количество имущества</h5>
                    <p class="card-text display-4">@Model.TotalPropertyCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Требует ремонта</h5>
                    <p class="card-text display-4">@Model.ExpiredPropertyCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Требует списания</h5>
                    <p class="card-text display-4">@Model.WriteOffPropertyCount</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Графики -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Расходы по месяцам</h5>
                </div>
                <div class="card-body">
                    <canvas id="expensesChart" width="400" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Получаем данные из модели
        var monthlyExpenses = @Html.Raw(Json.Serialize(Model.MonthlyExpenses));
        
        // Подготавливаем данные для графика
        var labels = monthlyExpenses.map(item => item.month);
        var data = monthlyExpenses.map(item => item.expense);
        
        // Создаем график
        var ctx = document.getElementById('expensesChart').getContext('2d');
        var expensesChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Расходы (₽)',
                    data: data,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}