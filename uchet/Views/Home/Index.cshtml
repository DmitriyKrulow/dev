@model IEnumerable<uchet.Models.Property>

@{
    ViewData["Title"] = "Список имущества";
}

<h2>Имущество</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить имущество</a>
</p>

<!-- Фильтры -->
<form method="get" asp-action="Index" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <select name="propertyTypeId" asp-items="ViewBag.PropertyTypes" class="form-control">
                <option value="">Все типы</option>
            </select>
        </div>
        <div class="col-md-3">
            <select name="locationId" asp-items="ViewBag.Locations" class="form-control">
                <option value="">Все места</option>
            </select>
        </div>
        <div class="col-md-3">
            <select name="userId" asp-items="ViewBag.Users" class="form-control">
                <option value="">Все пользователи</option>
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-secondary">Фильтровать</button>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Инвентарный №</th>
            <th>Тип</th>
            <th>Местоположение</th>
            <th>Назначен</th>
            <th>Дата баланса</th>
            <th>Срок (мес)</th>
            <th>Стоимость</th>
            <th>Последнее ТО</th>
            <th>Годен до</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.InventoryNumber</td>
                    <td>@item.PropertyType?.Name</td>
                    <td>@item.Location?.Name</td>
                    <td>@item.AssignedUser?.Name</td>
                    <td>@(item.BalanceDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                    <td>@item.UsagePeriod</td>
                    <td>@(item.Cost?.ToString("C") ?? "-")</td>
                    <td>@(item.LastMaintenanceDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                    <td>@(item.ExpiryDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Править</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="12" class="text-center text-muted">Имущество не найдено</td>
            </tr>
        }
    </tbody>
</table>
